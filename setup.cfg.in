[metadata]
version = @VINEYARD_VERSION@

[options]
install_requires =
    jinja2
    kubernetes
    numpy
    pandas<1.0.0; python_version<'3.6'
    pandas<1.2.0; python_version<'3.7'
    pandas>=1.0.0; python_version>='3.7'
    pyarrow
    sortedcontainers
    setuptools

[pycodestyle]
max_line_length = 120

[yapf]
based_on_style = pep8
column_limit = 120
blank_line_before_module_docstring = True

[build_sphinx]
source-dir = docs
build-dir  = docs/_build
all_files  = 1
fresh-env  = 1

[upload_docs]
upload-dir = docs/_build/html
